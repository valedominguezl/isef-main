RewriteEngine On
RewriteBase /

# Redirige de http://www.isefsanluis.net o http://isefsanluis.net a https://isefsanluis.net
RewriteCond %{HTTP_HOST} ^www\.isefsanluis\.net$ [NC]
RewriteRule ^(.*)$ https://isefsanluis.net/$1 [L,R=301]

# Si la conexi√≥n es HTTP, redirige a HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://isefsanluis.net%{REQUEST_URI} [L,R=301]

# Redirige rutas inexistentes a index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]
